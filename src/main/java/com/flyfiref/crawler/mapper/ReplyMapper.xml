<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.flyfiref.crawler.mapper.ReplyMapper">
    <!--插入评论-->
    <insert id="insert">
        insert into t_reply(bvid,r_like,content,uname,ctime) values
        (#{bvid},#{r_like},#{content},#{uname},#{ctime})
    </insert>
    <!--根据分页和bvid查询评论-->
    <select id="selectRepliesWithCondition" resultType="Reply">
        select * from t_reply
        <where>
            <if test="bvid!=null">and bvid = #{bvid}</if>
        </where>
        order by rid desc limit #{beginNo},#{pageSize}
    </select>
    <!--计数-->
    <select id="count">
        select count(1) from t_reply
        <where>
            <if test="bvid!=null">and bvid = #{bvid}</if>
        </where>
    </select>
</mapper>